<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_log_expenses"
    tools:context="com.example.user.dhumilyadein.LogExpenses">

    <TextView
        android:id="@+id/expenseDateLbl"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Expense Date"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/expenseDateTxt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="140dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/expenseDetailsLbl"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Expense Details"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/expenseDetailsTxt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="140dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/expenseLbl"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Expense"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/expenseTxt"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="140dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/resetBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Reset"
        android:textSize="18sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="80dp"
        />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Save"
        android:textSize="18sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="180dp"
        />

</RelativeLayout>
